@using 仓储系统.ViewModels

<script>
    function ResetForm() {
        document.getElementById('U_Id').value = "";
        document.getElementById('U_name').value = "";
        document.getElementById('U_password').value = "";
        document.getElementById('U_post').value = "";
        document.getElementById('U_department').value = "";
        document.getElementById('U_birthday').value = "";
        document.getElementById('U_phone').value = "";
        document.getElementById('U_level').value = "";
        document.getElementById('U_point').value = "";
        document.getElementById('U_sex').value = "";
    }
</script>

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("SaveUser", "Home", FormMethod.Post, new { @id = "delete-form", role = "form" }))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">添加用户</h4>
            </div>
            <div class="modal-body">
                <div>
                    <table class="table-borderless">
                        <tr>
                            <td>
                                员工编号:
                            </td>
                            <td>
                                <input type="text" id="U_Id" name="U_Id" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工姓名:
                            </td>
                            <td>
                                <input type="text" id="U_name" name="U_name" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工密码:
                            </td>
                            <td>
                                <input type="text" id="U_password" name="U_password" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工职务:
                            </td>
                            <td>
                                <input type="text" id="U_post" name="U_post" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工部门:
                            </td>
                            <td>
                                <input type="text" id="U_department" name="U_department" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                出生日期:
                            </td>
                            <td>
                                <input type="text" id="U_birthday" name="U_birthday" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                联系电话:
                            </td>
                            <td>
                                <input type="text" id="U_phone" name="U_phone" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工等级:
                            </td>
                            <td>
                                <input type="text" id="U_level" name="U_level" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                密码提示:
                            </td>
                            <td>
                                <input type="text" id="U_point" name="U_point" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                性别:
                            </td>
                            <td>
                                <input type="text" id="U_sex" name="U_sex" value="" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <input type="submit" class="btn btn-primary" value="添加" name="BtnSubmit">
            </div>
        }
    </div>
</div>

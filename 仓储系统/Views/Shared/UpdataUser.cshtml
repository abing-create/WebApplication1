@using 仓储系统.ViewModels
@model CreateUserViewModel

<script>
        function ResetUpdataForm_@Model.user.Id$() {
            document.getElementById('UU_name').value = "@Model.user.U_name";
            document.getElementById('UU_password').value = "@Model.user.U_password";
            document.getElementById('UU_birthday').value = "@Model.user.U_birthday.ToString("yyyy-MM-dd")";
            document.getElementById('UU_phone').value = "@Model.user.U_phone";
            document.getElementById('UU_point').value = "@Model.user.U_point";
            document.getElementById('UU_sex').value = "@Model.user.U_sex";
        }
</script>

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("UpdataUser", "Home", FormMethod.Post, new { @id = "UserForm", role = "form" }))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">修改信息</h4>
            </div>
            <div class="modal-body">
                <div>
                    <table class="table-borderless">
                        <tr>
                            <td>
                                员工编号:
                            </td>
                            <td>
                                <input type="text" id="UU_Id" name="U_Id" value="@Model.user.U_Id" readonly="readonly" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工等级:
                            </td>
                            <td>
                                <input type="text" id="UU_level" name="U_level" value="@Model.user.U_level" readonly="readonly" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工职务:
                            </td>
                            <td>
                                <input type="text" id="UU_post" name="U_post" value="@Model.user.U_post" readonly="readonly" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工部门:
                            </td>
                            <td>
                                <input type="text" id="UU_department" name="U_department" value="@Model.user.U_department" readonly="readonly" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工姓名:
                            </td>
                            <td>
                                <input type="text" id="UU_name" name="U_name" value="@Model.user.U_name" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工密码:
                            </td>
                            <td>
                                <input type="password" id="UU_password" name="U_password" value="@Model.user.U_password" />
                            </td>
                        </tr>

                        <tr>
                            <td>
                                出生日期:
                            </td>
                            <td>
                                <input type="text" id="UU_birthday" name="U_birthday" value="@Model.user.U_birthday.ToString("yyyy-MM-dd")" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                联系电话:
                            </td>
                            <td>
                                <input type="text" id="UU_phone" name="U_phone" value="@Model.user.U_phone" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                密码提示:
                            </td>
                            <td>
                                <input type="text" id="UU_point" name="U_point" value="@Model.user.U_point" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                性别:
                            </td>
                            <td>
                                <input type="text" id="UU_sex" name="U_sex" value="@Model.user.U_sex" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="ResetUpdataForm_@Model.user.Id$();">关闭</button>
                <input type="submit" class="btn btn-primary" name="BtnSubmit" value="提交更改" />
            </div>
        }
    </div>
</div>

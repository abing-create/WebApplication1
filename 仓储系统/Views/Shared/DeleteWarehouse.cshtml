@using 仓储系统.Models
@model Warehouse


<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        @using (Html.BeginForm("DeleteWarehouse", "Home", FormMethod.Post, new { @id = "WarehouseForm", role = "form" }))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">提示</h4>
            </div>
            <div class="modal-body">
                <div>
                    <label>确定要永久删除此仓库？</label>
                    <br/>
                    <input type="text" id="Wa_name" style="border: 0 none; outline:none; width:100%" name="Wa_name" value="@Model.Wa_name" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <input type="submit" class="btn btn-primary" name="BtnSubmit" value="确定">
            </div>
        }
    </div>
</div>
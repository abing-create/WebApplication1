@using 仓储系统.ViewModels
@model CreateUserViewModel

    <script>
    function ResetUpdataForm_@Model.user.Id$() {
        document.getElementById('U_Id').value = "@Model.user.U_Id";
        document.getElementById('U_name').value = "@Model.user.U_name";
        document.getElementById('U_password').value = "@Model.user.U_password";
        document.getElementById('U_post').value = "@Model.user.U_post";
        document.getElementById('U_department').value = "@Model.user.U_department.";
        document.getElementById('U_birthday').value = "@Model.user.U_birthday";
        document.getElementById('U_phone').value = "@Model.user.U_phone";
        document.getElementById('U_level').value = "@Model.user.U_level";
        document.getElementById('U_point').value = "@Model.user.U_point";
        document.getElementById('U_sex').value = "@Model.user.U_sex";
    }
    </script>

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("SaveUser", "Home", FormMethod.Post, new { @id = "delete-form", role = "form" }))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">添加用户</h4>
            </div>
            <div class="modal-body">
                <div>
                    <table class="table-borderless">
                        <tr>
                            <td>
                                员工编号:
                            </td>
                            <td>
                                <input type="text" id="U_Id" name="U_Id" value="@Model.user.U_Id" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工等级:
                            </td>
                            <td>
                                <input type="text" id="U_level" name="U_level" value="@Model.user.U_level" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工职务:
                            </td>
                            <td>
                                <input type="text" id="U_post" name="U_post" value="@Model.user.U_post" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工部门:
                            </td>
                            <td>
                                <input type="text" id="U_department" name="U_department" value="@Model.user.U_department" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                所属仓库:
                            </td>
                            <td>
                                <input type="text" id="U_point" name="U_point" value="@Model.user.U_point" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工姓名:
                            </td>
                            <td>
                                <input type="text" id="U_name" name="U_name" value="@Model.user.U_name" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                员工密码:
                            </td>
                            <td>
                                <input type="text" id="U_password" name="U_password" value="@Model.user.U_password" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                出生日期:
                            </td>
                            <td>
                                <input type="text" id="U_birthday" name="U_birthday" value="@Model.user.U_birthday.ToString("yyyy-MM-dd")" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                联系电话:
                            </td>
                            <td>
                                <input type="text" id="U_phone" name="U_phone" value="@Model.user.U_phone" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                性别:
                            </td>
                            <td>
                                <input type="text" id="U_sex" name="U_sex" value="@Model.user.U_sex" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="ResetUpdataForm_@Model.user.Id$();">关闭</button>
                <input type="submit" class="btn btn-primary" name="BtnSubmit" value="提交更改" />
            </div>
        }
    </div>
</div>


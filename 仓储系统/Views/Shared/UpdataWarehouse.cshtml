@using 仓储系统.Models
@model Warehouse

    <script>
    function ResetUpdataForm() {
        document.getElementById('UWa_Id').value = "@Model.Wa_Id";
        document.getElementById('UWa_name').value = "@Model.Wa_name";
        document.getElementById('UWa_address').value = "@Model.Wa_address";
        document.getElementById('UWa_princiopal').value = "@Model.Wa_princiopal";
        document.getElementById('UWa_contact').value = "@Model.Wa_contact";
        document.getElementById('UWa_capacity').value = "@Model.Wa_capacity";
        document.getElementById('UWa_able_capacity').value = "@Model.Wa_able_capacity";
        document.getElementById('UWa_note').value = "@Model.Wa_note";
    }
    </script>

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        @using (Html.BeginForm("SaveWarehouse", "Home", FormMethod.Post, new { @id = "WarehouseForm", role = "form" }))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">修改</h4>
            </div>
            <div class="modal-body">
                <div>
                    <table class="table-borderless">
                        <tr>
                            <td>
                                仓库编号:
                            </td>
                            <td>
                                <input type="text" id="UWa_Id" name="Wa_Id" value="@Model.Wa_Id" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                仓库名称:
                            </td>
                            <td>
                                <input type="text" id="UWa_name" name="Wa_name" value="@Model.Wa_name" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                仓库地址:
                            </td>
                            <td>
                                <input type="text" id="UWa_address" name="Wa_address" value="@Model.Wa_address" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                负责人:
                            </td>
                            <td>
                                <input type="text" id="UWa_princiopal" name="Wa_princiopal" value="@Model.Wa_princiopal" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                联系方式:
                            </td>
                            <td>
                                <input type="text" id="UWa_contact" name="Wa_contact" value="@Model.Wa_contact" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                仓库容量:
                            </td>
                            <td>
                                <input type="text" id="UWa_capacity" name="Wa_capacity" value="@Model.Wa_capacity" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                可用容量:
                            </td>
                            <td>
                                <input type="text" id="UWa_able_capacity" name="Wa_able_capacity" value="@Model.Wa_able_capacity" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                备注:
                            </td>
                            <td>
                                <input type="text" id="UWa_note" name="Wa_note" value="@Model.Wa_note" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="ResetUpdataForm();">取消</button>
                <input type="submit" class="btn btn-primary" value="提交更改" name="BtnSubmit">
            </div>
        }
    </div>
</div>


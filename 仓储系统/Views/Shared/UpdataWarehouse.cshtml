@using 仓储系统.Models
@model Warehouse


<script>
    function ResetForm() {
        document.getElementById('Wa_Id').value = "";
        document.getElementById('Wa_name').value = "";
        document.getElementById('Wa_address').value = "";
        document.getElementById('Wa_princiopal').value = "";
        document.getElementById('Wa_contact').value = "";
        document.getElementById('Wa_capacity').value = "";
        document.getElementById('Wa_able_capacity').value = "";
        document.getElementById('Wa_note').value = "";
    }
</script>

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">添加用户</h4>
        </div>
        <div class="modal-body">
            <div>
                @using (Html.BeginForm("SaveWarehouse", "Home", FormMethod.Post, new { @id = "WarehouseForm", role = "form" }))
                {
                    <table class="table-borderless">
                        <tr>
                            <td>
                                仓库编号:
                            </td>
                            <td>
                                <input type="text" id="Wa_Id" name="Wa_Id" value="@Model.Wa_Id" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                仓库名称:
                            </td>
                            <td>
                                <input type="text" id="Wa_name" name="Wa_name" value="@Model.Wa_name" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                仓库地址:
                            </td>
                            <td>
                                <input type="text" id="Wa_address" name="Wa_address" value="@Model.Wa_address" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                负责人:
                            </td>
                            <td>
                                <input type="text" id="Wa_princiopal" name="Wa_princiopal" value="@Model.Wa_princiopal" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                联系方式:
                            </td>
                            <td>
                                <input type="text" id="Wa_contact" name="Wa_contact" value="@Model.Wa_contact" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                仓库容量:
                            </td>
                            <td>
                                <input type="text" id="Wa_capacity" name="Wa_capacity" value="@Model.Wa_capacity" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                可用容量:
                            </td>
                            <td>
                                <input type="text" id="Wa_able_capacity" name="Wa_able_capacity" value="@Model.Wa_able_capacity" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                备注:
                            </td>
                            <td>
                                <input type="text" id="Wa_note" name="Wa_note" value="@Model.Wa_note" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">

                                <input type="submit" name="BtnSubmit" value="保存" onclick="SaveEmployee();" />
                                <input type="submit" name="BtnSubmit" value="取消" onclick="CancelSave()" />
                                <input type="button" name="BtnReset" value="清空" onclick="ResetForm();" />
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            <button type="button" class="btn btn-primary" onclick="$('#delete-form').submit();">提交更改</button>
        </div>
    </div>
</div>


@using 仓储系统.ViewModels
@model InOutTableViewModel

<h3 class="text-center"><label>@Model.type</label>表: @Model.IO_id</h3>
<div class="container">
    <div class="row">
        <table border="1" class="table table-bordered">
            <tr>
                <th scope="col">条码编号</th>
                <th scope="col">商品编号</th>
                <th scope="col">商品名称</th>
                <th scope="col">分类</th>
                <th scope="col">规格</th>
                <th scope="col">单价</th>
                <th scope="col">商品数量</th>
                <th scope="col">时间</th>
                <th scope="col" colspan="2">操作</th>
            </tr>
            @for (int i = 0; i < Model.commodityViewModels.Count(); i++)
            {
                CommodityViewModel item = Model.commodityViewModels[i];
                <tr>
                    <td>@item.commodity.Co_bar_code</td>
                    <td>@item.commodity.Co_Id</td>
                    <td>@item.commodity.Co_name</td>
                    <td>@item.commodity.Co_type</td>
                    <td>@item.commodity.Co_specification</td>
                    <td>@item.commodity.Co_price</td>
                    <td>@item.Count</td>
                    <td>@item.Out_into_date</td>
                    <td>
                        <a href="#d_@i" data-toggle="modal">删除</a>
                        <div class="modal fade" id="d_@i" tabindex="-1" role="dialog" aria-hidden="true">
                            @{
                                Html.RenderPartial("DeleteRecord", item);
                            }
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
